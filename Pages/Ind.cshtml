@page
@{
    ViewData["Title"] = "Time Entry";
}
@model IEnumerable<PCAtime.Models.TimesheetEntry>

<div class="container mt-5">
    <h2>Timesheet Entries</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Task Description</th>
                <th>Hours Worked</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>@Html.DisplayFor(modelItem => item.TaskDescription)</td>
                <td>@Html.DisplayFor(modelItem => item.HoursWorked)</td>
            </tr>
        }
        </tbody>
    </table>
</div>
